<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestActivity">

    <Button
        android:id="@+id/start_crime_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Crime Service"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="29dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/stop_crime_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Crime Service"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="29dp"
        tools:ignore="HardcodedText" />

    <!--Button
        android:id="@+id/start_geofence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Crime Service"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="29dp"
        tools:ignore="HardcodedText" /-->

    <Button
        android:id="@+id/stop_geofence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Geofence"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="29dp"
        tools:ignore="HardcodedText" />
</LinearLayout>